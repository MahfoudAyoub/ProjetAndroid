<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminHomeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/admin_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/aToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/cardview_light_background"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="Admin Home"
            app:titleTextColor="@android:color/black"/>
    </com.google.android.material.appbar.AppBarLayout>


    <ImageView
        android:id="@+id/img_admin"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/admin"
        android:layout_below="@+id/admin_app_bar"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/title_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome Dear Admin"
        android:gravity="center"
        android:layout_below="@+id/img_admin"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        />



